
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "login"}) do |f| %>
  <img src="/templogofeedback.png" class="img-responsive" alt="" />
  <%= render "layouts/flash" %>
  <div class="field">
    <%= f.email_field :email, autofocus: true ,:class => 'form-control input-lg',:placeholder => "Email"%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-lg',:placeholder => "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => 'btn btn-lg btn-primary btn-block'%>
  </div>
<% end %>











